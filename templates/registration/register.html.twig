{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <section class="flex flex-col md:flex-row h-screen items-center">

        <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
            <img src="https://source.unsplash.com/random/?games" alt="random_img"
                 class="w-full h-full object-cover">
        </div>

        <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">

            <div class="w-full h-100">
                {{ form_start(registrationForm) }}

                <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Create an account</h1>

                <div>
                    <label class="block text-gray-700 pt-3 pb-3">Email Address</label>
                    <div>
                        {{ form_widget(registrationForm.email) }}
                    </div>
                </div>

                <div class="mt-4">
                    <label class="block text-gray-700 pt-3 pb-3">Password</label>
                    <div>
                        {{ form_widget(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                    </div>
                </div>

                <div class="mt-4">
                    <div class="block text-gray-700">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="text-right mt-2">
                        <a href="#" class="text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700">Forgot Password?</a>
                    </div>
                </div>

                <button type="submit"
                        class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg px-4 py-3 mt-6">
                    Register
                </button>

                <p class="mt-8">Already have an account?
                    <a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-700 font-semibold">Sing
                        In</a>
                </p>

            </div>
        </div>

    </section>

{% endblock %}
