{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'login') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <section class="flex flex-col md:flex-row h-screen items-center">

            <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
                <img src="https://source.unsplash.com/random/?games" alt="random_img"
                     class="w-full h-full object-cover">
            </div>

            <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">

                <div class="w-full h-100">

                    <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Sign In</h1>

                    <div>
                        <div>
                            <label for="inputEmail" class="block text-gray-700 pt-3 pb-3">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none"
                                   autocomplete="email" required autofocus>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div>
                            <label for="inputPassword" class="block text-gray-700 pt-3 pb-3">Password</label>
                            <input type="password" name="password" id="inputPassword"
                                   class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none"
                                   autocomplete="current-password" required>
                        </div>
                    </div>

                    <div class="text-right mt-2">
                        <a href="#" class="text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700">Forgot
                            Password?</a>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit"
                            class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg px-4 py-3 mt-6">
                        Log In
                    </button>

                    <p class="mt-8">Don't have an account yet?
                        <a href="{{ path('app_register') }}" class="text-blue-500 hover:text-blue-700 font-semibold">Create
                            an Account</a>
                    </p>

                </div>
            </div>

        </section>

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/login/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
